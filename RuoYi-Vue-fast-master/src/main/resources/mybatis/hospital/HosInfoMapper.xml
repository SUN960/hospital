<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.hospital.mapper.HosInfoMapper">
    
    <resultMap type="HosInfo" id="HosInfoResult">
        <result property="appointId"    column="appoint_id"    />
        <result property="userId"    column="user_id"    />
        <result property="docId"    column="doc_id"    />
        <result property="illSituation"    column="ill_situation"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectHosInfoVo">
        select appoint_id, user_id, doc_id, ill_situation, start_time, end_time, status, create_by, create_time, update_by, update_time, remark from hos_info
    </sql>

    <select id="selectHosInfoList" parameterType="HosInfo" resultMap="HosInfoResult">
        <include refid="selectHosInfoVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="docId != null "> and doc_id = #{docId}</if>
            <if test="illSituation != null  and illSituation != ''"> and ill_situation = #{illSituation}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectHosInfoById" parameterType="Long" resultMap="HosInfoResult">
        <include refid="selectHosInfoVo"/>
        where appoint_id = #{appointId}
    </select>
        
    <insert id="insertHosInfo" parameterType="HosInfo" useGeneratedKeys="true" keyProperty="appointId">
        insert into hos_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="docId != null">doc_id,</if>
            <if test="illSituation != null and illSituation != ''">ill_situation,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="docId != null">#{docId},</if>
            <if test="illSituation != null and illSituation != ''">#{illSituation},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateHosInfo" parameterType="HosInfo">
        update hos_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="docId != null">doc_id = #{docId},</if>
            <if test="illSituation != null and illSituation != ''">ill_situation = #{illSituation},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where appoint_id = #{appointId}
    </update>

    <delete id="deleteHosInfoById" parameterType="Long">
        delete from hos_info where appoint_id = #{appointId}
    </delete>

    <delete id="deleteHosInfoByIds" parameterType="String">
        delete from hos_info where appoint_id in 
        <foreach item="appointId" collection="array" open="(" separator="," close=")">
            #{appointId}
        </foreach>
    </delete>
    
</mapper>