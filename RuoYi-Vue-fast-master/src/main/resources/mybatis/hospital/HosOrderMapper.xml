<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.hospital.mapper.HosOrderMapper">
    
    <resultMap type="HosOrder" id="HosOrderResult">
        <result property="orderId"    column="order_id"    />
        <result property="userId"    column="user_id"    />
        <result property="date"    column="date"    />
        <result property="cost"    column="cost"    />
        <result property="policy"    column="policy"    />
        <result property="otherCost"    column="other_cost"    />
        <result property="totalCost"    column="total_cost"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectHosOrderVo">
        select order_id, user_id, date, cost, policy, other_cost, total_cost, status, create_by, create_time, update_by, update_time, remark from hos_order
    </sql>

    <select id="selectHosOrderList" parameterType="HosOrder" resultMap="HosOrderResult">
        <include refid="selectHosOrderVo"/>
        <where>  
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="date != null "> and date = #{date}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectHosOrderById" parameterType="Long" resultMap="HosOrderResult">
        <include refid="selectHosOrderVo"/>
        where order_id = #{orderId}
    </select>
        
    <insert id="insertHosOrder" parameterType="HosOrder" useGeneratedKeys="true" keyProperty="orderId">
        insert into hos_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id,</if>
            <if test="date != null">date,</if>
            <if test="cost != null">cost,</if>
            <if test="policy != null">policy,</if>
            <if test="otherCost != null">other_cost,</if>
            <if test="totalCost != null">total_cost,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">#{userId},</if>
            <if test="date != null">#{date},</if>
            <if test="cost != null">#{cost},</if>
            <if test="policy != null">#{policy},</if>
            <if test="otherCost != null">#{otherCost},</if>
            <if test="totalCost != null">#{totalCost},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateHosOrder" parameterType="HosOrder">
        update hos_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="date != null">date = #{date},</if>
            <if test="cost != null">cost = #{cost},</if>
            <if test="policy != null">policy = #{policy},</if>
            <if test="otherCost != null">other_cost = #{otherCost},</if>
            <if test="totalCost != null">total_cost = #{totalCost},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where order_id = #{orderId}
    </update>

    <delete id="deleteHosOrderById" parameterType="Long">
        delete from hos_order where order_id = #{orderId}
    </delete>

    <delete id="deleteHosOrderByIds" parameterType="String">
        delete from hos_order where order_id in
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>
    
</mapper>