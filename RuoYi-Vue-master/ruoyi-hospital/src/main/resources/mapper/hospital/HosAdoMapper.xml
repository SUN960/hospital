<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hospital.mapper.HosAdoMapper">
    
    <resultMap type="HosAdo" id="HosAdoResult">
        <result property="adoId"    column="ado_id"    />
        <result property="adoName"    column="ado_name"    />
        <result property="orderNum"    column="order_num"    />
        <result property="leader"    column="leader"    />
        <result property="phone"    column="phone"    />
        <result property="address"    column="address"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectHosAdoVo">
        select ado_id, ado_name, order_num, leader, phone, address, status, create_by, create_time, update_by, update_time, remark from hos_ado
    </sql>

    <select id="selectHosAdoList" parameterType="HosAdo" resultMap="HosAdoResult">
        <include refid="selectHosAdoVo"/>
        <where>  
            <if test="adoName != null  and adoName != ''"> and ado_name like concat('%', #{adoName}, '%')</if>
            <if test="orderNum != null "> and order_num = #{orderNum}</if>
            <if test="leader != null  and leader != ''"> and leader = #{leader}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectHosAdoByAdoId" parameterType="Long" resultMap="HosAdoResult">
        <include refid="selectHosAdoVo"/>
        where ado_id = #{adoId}
    </select>
        
    <insert id="insertHosAdo" parameterType="HosAdo" useGeneratedKeys="true" keyProperty="adoId">
        insert into hos_ado
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="adoName != null">ado_name,</if>
            <if test="orderNum != null">order_num,</if>
            <if test="leader != null">leader,</if>
            <if test="phone != null">phone,</if>
            <if test="address != null">address,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="adoName != null">#{adoName},</if>
            <if test="orderNum != null">#{orderNum},</if>
            <if test="leader != null">#{leader},</if>
            <if test="phone != null">#{phone},</if>
            <if test="address != null">#{address},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateHosAdo" parameterType="HosAdo">
        update hos_ado
        <trim prefix="SET" suffixOverrides=",">
            <if test="adoName != null">ado_name = #{adoName},</if>
            <if test="orderNum != null">order_num = #{orderNum},</if>
            <if test="leader != null">leader = #{leader},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="address != null">address = #{address},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where ado_id = #{adoId}
    </update>

    <delete id="deleteHosAdoByAdoId" parameterType="Long">
        delete from hos_ado where ado_id = #{adoId}
    </delete>

    <delete id="deleteHosAdoByAdoIds" parameterType="String">
        delete from hos_ado where ado_id in 
        <foreach item="adoId" collection="array" open="(" separator="," close=")">
            #{adoId}
        </foreach>
    </delete>
</mapper>